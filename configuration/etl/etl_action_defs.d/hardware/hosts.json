{
    "table_definition": [{
        "$ref": "${table_definition_dir}/hardware/host.json#/table_definition"
    }],
    "destination_record_map": {
        "host": {
            "host_id": "host_id",
            "node_id": "node_id",
            "start_time": "start_time",
            "end_time": "end_time",
            "start_day_id": "start_day_id",
            "end_day_id": "end_day_id"
        }
    },
    "source_query": {
        "records": {
            "host_id": "s.host_id",
            "node_id": "s.node_id",
            "record_time": "FROM_UNIXTIME(s.record_time)",
            "record_day_id": "DATE_FORMAT(FROM_UNIXTIME(s.record_time), '%Y00%j')",
            "start_time": -1,
            "end_time": -1,
            "start_day_id": -1,
            "end_day_id": -1
        },
        "joins": [
            {
                "name": "record_time_staging",
                "schema": "${SOURCE_SCHEMA}",
                "alias": "s"
            }
        ]
    }
}
